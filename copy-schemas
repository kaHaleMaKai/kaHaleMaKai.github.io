#!/bin/bash
set -euo pipefail

declare -A srcDirs
gitRoot=''/home/lars/git
srcDirs[opencsv/core]='kahalemakai/opencsv/core/src/main/resources/schemas'
srcDirs[opencsv/plugins]='kahalemakai/opencsv/plugins/src/main/resources/schemas'

project="$1"
version="$2"

dest="${gitRoot}/kahalemakai/kaHaleMaKai.github.io/schemas/${project}/${version}"
mkdir -p "$dest"
cp "${gitRoot}/${srcDirs[${project}]}/"*.xsd "$dest/."

# vim: set ft=sh
# vim: ft=sh
